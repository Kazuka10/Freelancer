<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#d6d7d7">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stan Ekspozycyjny"
            android:id="@+id/Kontakt"
            android:background="#505050"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nazwa"
            android:id="@+id/textView5"
            android:background="#505050"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:gravity="center_horizontal"
            android:layout_weight="3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Kod"
            android:id="@+id/textView6"
            android:background="#505050"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:gravity="center_horizontal"
            android:layout_weight="3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ilosc"
            android:id="@+id/textView7"
            android:background="#505050"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:gravity="center_horizontal"
            android:layout_weight="3" />
    </TableRow>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"> <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_weight="1.35"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#d6d7d7" >

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Edytuj"
            android:src="@drawable/akceptuj2"

            android:background="@drawable/selector_edytuj"
            android:layout_weight="1"
           />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/Usun"
            android:src="@drawable/zamknij"
            android:background="@drawable/selector_usun"
            android:layout_weight="1" />
    </LinearLayout></RelativeLayout>
</LinearLayout>